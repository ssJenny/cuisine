@charset "utf-8";


.clearfix:before,
.clearfix:after{
	content: "";
	height: 0;
	display: block;
}
.clearfix:after{
	clear: both;
}
.header-wrap{
	height: 120px;
	background: #221236 url(../img/header_bg.jpg) center ;
}
.header{
	width: 1100px;
	margin: 0 auto;
	height: 120px;
}
.logo{
	float: left;
}

.nav{
	height: 25px;
	float: right;
	margin-top: 45px;
	width: 636px;
}
.nav>li{
	float: left;
	height: 35px;
	/*line-height: 120px;*/
	text-align: right;
	margin-left: 30px;
	font-size: 16px;
	color: #fff;
	cursor: pointer;
	position: relative;
	font-weight: bold;
}
.nav_now{
	background: url(../img/nav_now_bg.png) bottom center no-repeat;
}
.nav>li:hover {
	background: url(../img/nav_now_bg.png) bottom center no-repeat;
}
.nav-caret{
	width: 27px;
	height: 27px;
	vertical-align: middle;
	margin-left: 5px;
	background: url(../img/nav_xiajiantou.png) center;
}
.nav>li>ul{
	position: absolute;
	top: 35px;
	left: -36px;
	display: none;
	line-height: 40px;
	width: 180px;
	font-size: 15px;
	cursor: pointer;
	background: #36264a;
	color: #fff;
	z-index: 10;
}
.nav>li>ul>li{
	text-align: left;
	padding-left: 30px;
	font-weight: normal;
	transition: padding-left .5s ease;
}
.nav>li>ul>li:hover{
	padding-left: 40px;
	background: #3498db url(../img/nav_li_bg.png) no-repeat 165px 15px;
	transition: padding-left .5s ease;
}

